<UserControl x:Class="StopWatch.Components.Time"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             Name="time"
             >
    <Canvas Background="Black" >
        <Border CornerRadius="5" Background="Black" BorderThickness="2" BorderBrush="white" >
            <TextBlock Foreground="White" Padding="10 0 10 0" Text="{Binding ElementName=time, Path=clock}" FontSize="200" />
        </Border>
        <Border CornerRadius="5" Margin="490 120 0 0" Background="Black" BorderThickness="2" BorderBrush="White">
            <TextBlock  Foreground="White" Text="{Binding ElementName=time, Path=secs}" FontSize="90" />
        </Border>
    </Canvas>
</UserControl>
