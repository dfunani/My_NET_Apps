<Window x:Class="RaCee.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow" Width="450" Height="550"
        Background="Transparent"
        WindowStyle="SingleBorderWindow"
        >

    <Border>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="17*"/>
                <ColumnDefinition Width="28*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>
            <Border Grid.ColumnSpan="2">
                <TextBlock Text="Hello" FontSize="50"/>
            </Border>
            <Border Background="#101010" Grid.ColumnSpan="2" Margin="0,89,0,0" Grid.RowSpan="2">
                <Canvas x:Name="border" HorizontalAlignment="Center" VerticalAlignment = "Top" >

                </Canvas>
            </Border>
        </Grid>
    </Border>
</Window>
